
NODE_ENV=development
PORT=3000

# Database Configuration
# Option 1: Use DATABASE_URL for cloud PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Option 2: Individual connection parameters (for local development)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=book_review_express_db
DB_DIALECT=postgres
DB_SSL=false

# For cloud databases (Neon, AWS RDS, Google Cloud SQL, etc.)
# DB_SSL=true

# Redis Configuration
# Option 1: Use REDIS_URL for cloud Redis (recommended for production)
# REDIS_URL=redis://username:password@host:port

# Option 2: Individual connection parameters (for local development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Cache TTL (in seconds)
CACHE_TTL=300

# API Configuration
API_PREFIX=/api/v1
